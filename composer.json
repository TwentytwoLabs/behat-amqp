{
    "name": "twentytwo-labs/behat-amqp",
    "license": "MIT",
    "description": "Behat Amqp Context to test AMQP messages, based on Swarrot library and PECL AMQP php extension.",
    "keywords": ["behat", "amqp"],
    "authors": [
        {
            "name": "Thibaut ALGRIN",
            "email": "algrin.thibaut@gmail.com"
        }
    ],
    "require": {
        "ext-amqp": "*",
        "ext-json": "*",
        "swarrot/swarrot": "^2.4 || ^3.0 || ^4.0",
        "behat/behat": "^3.4",
        "symfony/yaml": "^3.4 || ^4.0 || ^5.0 || ^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "squizlabs/php_codesniffer": "^3.4",
        "phpmetrics/phpmetrics": "^2.4",
        "phpmd/phpmd": "^2.6"
    },
    "scripts": {
        "cs": "vendor/bin/phpcs --standard=phpcs.xml.dist src",
        "cs-fixer": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix"
    },
    "autoload": {
        "psr-4": {"TwentytwoLabs\\BehatAmqp\\": "src/"}
    }
}
